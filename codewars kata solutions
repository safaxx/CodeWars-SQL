/* ONLY THE KATAS NAMES ARE SPECIFIED NOT THE QUESIIONS */

1. SQL left and right:
SELECT LEFT(project,commits) AS project, RIGHT(address,contributors) AS address 
FROM repositories 

2. Counting and Grouping:
SELECT race, COUNT(race) AS count
FROM demographics
GROUP BY race
ORDER BY count DESC;

3.TRUNCATE:
SELECT TRUNC(number1+number2) as towardzero
FROM decimals;

4. SQL with LOTR: ELVEN WILDCARDS:
SELECT INITCAP(CONCAT(firstname,' ',lastname)) AS shortlist 
FROM elves 
WHERE firstname LIKE '%tegil%' OR lastname LIKE '%astar%'

5. SIMPLE NULL HANDLING 
SELECT id, COALESCE(NULLIF(name,''), '[product name not found]') AS name,
price, COALESCE(NULLIF(card_name,''), '[card name not found]') AS card_name,
card_number, transaction_date
FROM eusales
WHERE price > 50.00

6.SIMPLE CONCATINATING  
SELECT CONCAT(prefix,' ',first,' ',last,' ',suffix) as title FROM names

7. SIMPLE JOIN AND COUNT 
SELECT p.*, COUNT(t.id) AS toy_count FROM
people p JOIN toys t ON t.people_id = p.id
GROUP BY p.id
